<p>
    Andrew ID:<br />
    <%= @user.andrew %>
  </p>
  <p>
    First Name:<br />
    <%= @user.first_name %>
  </p>
 <p>
    Last Name:<br />
    <%= @user.last_name %>
 </p> 
  <p>
    Department:<br />
    <%= @user.major %>
 </p>
  <p> 
    Grade:<br />
    <%= @user.grade %>
  </p>
  <%= form_for @user do |f| %>
  <%= f.error_messages %>
 
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>	
<% end %>


