<p>
    <div class="bold">Andrew ID:</div>
    <%= @user.andrew %>
  </p>
  <p>
    <div class="bold">First Name:</div>
    <%= @user.first_name %>
  </p>
 <p>
    <div class="bold">Last Name:</div>
    <%= @user.last_name %>
 </p> 
  <p>
    <div class="bold">Department:</div>
    <%= @user.major %>
 </p>
  <p> 
    <div class="bold">Grade:</div>
    <%= @user.grade %>
  </p>

  <%= form_for @user do |f| %>
  <%= f.error_messages %>
 
  <p>
    <div class="bold"><%= f.label :username %></div>
    <%= f.text_field :username %>
  </p>
   <p>
    <%= f.label :phone, "Phone Number" %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :carrier, "Carrier (e.g. AT&T, Verizon)" %><br />
    <%= f.select :carrier, User::CARRIERS %>
  </p>
  <p>
    <%= f.label :receive_text, "Would you like to receive text notifications of conferences?" %><br />
    <%= f.check_box :receive_text %>
  </p>

  <p>
    <div class="bold"><%= f.label :password %></div>
    <%= f.password_field :password %>
  </p>
  <p>
    <div class="bold"><%= f.label :password_confirmation, "Confirm Password" %></div>
    <%= f.password_field :password_confirmation %>
  </p>
  <% if current_user && current_user.role == "admin" %>
  <p>
    <%= f.label :role %><br />
    <%= f.select :role, User::ROLES %>
  </p>
  <% end %>  
<p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>	
<% end %>


