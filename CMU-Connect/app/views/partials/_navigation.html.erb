
<% if current_user %>
	<div id="navigation">
		<div id="copy">
			<ul>

			<li><%= link_to 'Home', welcome_path %></li>
			<li id="social"><%= link_to 'Social', messages_path %></li>
			<% if current_user.invitations.size > 0 %>
			<li id="professional2"><%= link_to "Professional (#{current_user.invitations.size})", :calendar %></li>
			<% else %>
			<li id="professional"><%= link_to "Professional", :calendar %></li>
			<% end %>
			<li id="academic"><%= link_to 'Academic', :calendar %></li>
			<li id="account"><%= link_to 'My Account', edit_user_path(current_user) %></li>	
			<li id="faq"><%= link_to 'FAQs', :faq %></li>
			<li><%= link_to 'Logout', logout_path %></li>
			<% if current_user.role == "admin"  %>
			<li><%= link_to 'Admin', :admin %></li>
			<%end %>
			</ul>
		</div>
	</div>
	
<% else%>
	<div id="navigation">
		<div id="copy">
			<ul>
			<li><%= link_to 'Home', landing_path %></li>
			<li id="privacy"><%= link_to 'Privacy',  privacy_path %></li>
			<li id="contact"><%= link_to 'Contact Us', contact_path %></li>
			<li><%= link_to 'Login', login_path %></li>
			<ul>
		</div>
	</div>

<% end %>


<script type="text/javascript" class="example">
$(document).ready(function()
{
	$('#social').qtip({
		content: 'In the Social hub, you can engage in text or randomized video chat!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	$('#professional').qtip({
		content: 'In the Professional hub, you can engage in text, randomized video chat, create and attend private group conferences!  You can also view all the conferences and events you are invited to.',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	<% if current_user and current_user.invitations.size > 0 %>
	$('#professional2').qtip({
		content: 'You have '<%= current_user.invitations.size %>' notifications!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	<% end %>
	
	$('#academic').qtip({
		content: 'In the Academic hub, you can engage in private group conferences!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	$('#account').qtip({
		content: 'To manage your account preferences, click here!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	$('#faq').qtip({
		content: 'To get help and find answers to frequently asked questions, click here!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	$('#privacy').qtip({
		content: 'To view our privacy statement, click here!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
	$('#contact').qtip({
		content: 'To contact the webmaster, click here!',
		position: {
			my: 'top center',
			at: 'bottom center'
		}
	});
	
});
</script>
