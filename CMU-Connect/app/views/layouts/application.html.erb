<!DOCTYPE html>
<html>
  <head>
	<link rel="shortcut icon" href="/assets/favicon.ico" />
    <title><%= content_for?(:title) ? yield(:title) : "CMU Connect" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery.qtip" %>
    <%= javascript_include_tag "application" %>
 	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script type="text/javascript" src="http://craigsworks.com/projects/qtip2/packages/latest/jquery.qtip.min.js"></script>
    <%= javascript_include_tag "http://blooming-day-4197.herokuapp.com/faye.js" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	
	<div id="header">
		<%= link_to image_tag('logo.png'), :welcome %>
		<div id="navigation">
				<%=render :partial => "partials/navigation" %>
		</div>
	</div>
	
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>

      <%= yield %>

	<div id="outer-footer">
		<%=render :partial => "partials/footer" %>
	</div>
    </div>
  </body>
</html>
